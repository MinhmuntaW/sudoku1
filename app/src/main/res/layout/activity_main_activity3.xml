<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffefe4"
    tools:context="com.example.administrator.sudoku1.MainActivity3"
    android:id="@+id/MainL"
    android:gravity="top">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  00:00"
        android:id="@+id/txtResult"
        android:textColor="#ffbb3f24"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New game"
        android:id="@+id/button3"
        android:onClick="menuClicked"
        android:background="#00ffffff"
        android:textColor="#ff501c13"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/button7"
        android:onClick="DoneClicked"
        android:background="#00612817"
        android:textColor="#ff480c04"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
